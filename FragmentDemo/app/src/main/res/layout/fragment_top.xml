<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mict.onenterprise.chhormchhatra.fragmentdemo.TopFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/afi_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/afi_red_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <SeekBar
            android:id="@+id/afi_green_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <SeekBar
            android:id="@+id/afi_blue_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <Button
            android:id="@+id/afi_set_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setbackground" />
    </LinearLayout>

</FrameLayout>
